<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors List</title>
    <style>
        /* Global Styles */
/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background: #ffffff;
    color: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
}

header {
    text-align: center;
    margin-bottom: 2rem;
}

h1 {
    font-size: 3rem;
    color: #007acc;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 1.5rem;
    position: relative;
}

/* Header Animation */
h1::before {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 50%;
    height: 4px;
    background: #00aaff;
    transform: translateX(-50%);
    opacity: 0.6;
}

/* Container Styles */
.container {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
}

/* Card Styles */
.card {
    background: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 280px;
    cursor: pointer;
    transition: transform 0.4s, box-shadow 0.4s;
    position: relative;
    overflow: hidden;
}

.card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.4s;
}

.card-content {
    padding: 1rem;
}

.card-content h2 {
    font-size: 1.6rem;
    margin-bottom: 0.5rem;
    color: #007acc;
}

.card-content p {
    margin: 0.5rem 0;
}

/* Hover Effects */
.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
}

.card:hover img {
    transform: scale(1.1);
}

/* Back to Home Button */
.home-link {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background-color: #007acc;
    color: #ffffff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s, transform 0.2s;
    margin-top: 2rem;
}

.home-link:hover {
    background-color: #005b99;
    transform: translateY(-2px);
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    animation: fadeIn 0.5s ease-in-out;
}

.modal-content {
    background-color: #ffffff;
    margin: 10% auto;
    padding: 2rem;
    border-radius: 10px;
    width: 80%;
    max-width: 600px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    animation: slideInDown 0.5s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideInDown {
    from { transform: translateY(-50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.close {
    color: #007acc;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover {
    color: #005b99;
}

    </style>
<body>
    <header>
        <h1>Our Esteemed Doctors</h1>
    </header>

    <div class="container">
        <!-- Doctor Cards -->
        <% doctors.forEach(function(doctor) { %>
            <div class="card" onclick="openModal('<%= doctor.doctor_id %>', '<%= doctor.doctor_name %>', '<%= doctor.specialization %>', '<%= doctor.timing %>', '<%= doctor.years_of_experience %>', '<%= doctor.department %>')">
                <img src="https://th.bing.com/th/id/OIG3.wWQhqFJgWQAP15hEXOmC?w=1024&h=1024&rs=1&pid=ImgDetMain" alt="ðŸ©ºðŸ‘¨â€âš•ï¸">
                <div class="card-content">
                    <h2><%= doctor.doctor_name %></h2>
                    <p><strong>Specialization:</strong> <%= doctor.specialization %></p>
                    <p><strong>Department:</strong> <%= doctor.department %></p>
                    <p><strong>Experience:</strong> <%= doctor.years_of_experience %> years</p>
                    <p><strong>Timing:</strong> <%= doctor.timing %></p>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Back to Home Button -->
    <a href="/" class="home-link">Back to Home</a>

    <!-- Modal -->
    <div id="doctorModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">Ã—</span>
            <h2>Doctor Details</h2>
            <p><strong>Doctor ID:</strong> <span id="modalDoctorID"></span></p>
            <p><strong>Doctor Name:</strong> <span id="modalDoctorName"></span></p>
            <p><strong>Specialization:</strong> <span id="modalSpecialization"></span></p>
            <p><strong>Timing:</strong> <span id="modalTiming"></span></p>
            <p><strong>Years of Experience:</strong> <span id="modalExperience"></span></p>
            <p><strong>Department:</strong> <span id="modalDepartment"></span></p>
        </div>
    </div>

    <script>
        function openModal(id, name, specialization, timing, experience, department) {
            document.getElementById('modalDoctorID').innerText = id;
            document.getElementById('modalDoctorName').innerText = name;
            document.getElementById('modalSpecialization').innerText = specialization;
            document.getElementById('modalTiming').innerText = timing;
            document.getElementById('modalExperience').innerText = experience;
            document.getElementById('modalDepartment').innerText = department;
            document.getElementById('doctorModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('doctorModal').style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById('doctorModal')) {
                closeModal();
            }
        }
    </script>

</body>
</html>
