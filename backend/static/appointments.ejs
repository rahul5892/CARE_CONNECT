<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Appointments</title>

</head>
<style>
  body {
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(to right, #f4f9f9, #c2e9fb);
      color: #333;
      margin: 0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      animation: fadeIn 1s ease-in-out;
  }

  @keyframes fadeIn {
      from {
          opacity: 0;
      }
      to {
          opacity: 1;
      }
  }

  h1 {
      font-size: 3em;
      color: #007ACC;
      margin-bottom: 20px;
      text-shadow: 2px 2px 4px rgba(0, 122, 204, 0.3);
      animation: bounceIn 1s ease-in-out;
  }

  @keyframes bounceIn {
      0%, 20%, 40%, 60%, 80%, 100% {
          transform: translateY(0);
      }
      50% {
          transform: translateY(-10px);
      }
  }

  table {
      width: 100%;
      max-width: 1200px;
      border-collapse: collapse;
      border: 1px solid #007ACC;
      box-shadow: 0 4px 10px rgba(0, 122, 204, 0.2);
      animation: slideInUp 1s ease-in-out;
  }

  @keyframes slideInUp {
      from {
          opacity: 0;
          transform: translateY(20px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }

  thead {
      background-color: #007ACC;
      color: white;
      animation: fadeIn 1.5s ease-in-out;
  }

  th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      animation: fadeIn 2s ease-in-out;
  }

  tbody tr {
      transition: background-color 0.3s, transform 0.3s;
  }

  tbody tr:hover {
      background-color: rgba(0, 122, 204, 0.1);
      transform: scale(1.02);
  }

  th {
      font-weight: bold;
      text-transform: uppercase;
  }

  td {
      font-size: 0.9em;
  }

  a {
      display: inline-block;
      background-color: #28a745;
      color: white;
      padding: 10px 15px;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 20px;
      text-align: center;
      transition: background-color 0.3s, transform 0.3s;
      animation: pulse 2s infinite;
  }

  @keyframes pulse {
      0% {
          transform: scale(1);
      }
      50% {
          transform: scale(1.05);
      }
      100% {
          transform: scale(1);
      }
  }

  a:hover {
      background-color: #218838;
      transform: scale(1.05);
  }

  @media (max-width: 768px) {
      table {
          display: block;
          overflow-x: auto;
          white-space: nowrap;
      }
      th, td {
          padding: 10px;
          font-size: 0.8em;
      }
  }
</style>

<body>
  <h1>All Appointments</h1>
  <table>
    <thead>
      <tr>
        <th>Queue Number</th>
        <th>Patient Name</th>
        <th>Disease</th>
        <th>Severity</th>
        <th>Doctor Name</th>
        <th>Specialization</th>
        <th>Appointment Date</th>
        <th>Age</th>
        <th>Weight</th>
        <th>Mail</th>
        <th>Pincode</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.forEach(appointment => { %>
        <tr>
          <td><%= appointment.queue_number %></td>
          <td><%= appointment.patient_name %></td>
          <td><%= appointment.disease %></td>
          <td><%= appointment.severity %></td>
          <td><%= appointment.doctor_name %></td>
          <td><%= appointment.specialization %></td>
          <td><%= appointment.appointment_date %></td>
          <td><%= appointment.age %></td>
          <td><%= appointment.weight %></td>
          <td><%= appointment.mail %></td>
          <td><%= appointment.pincode %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/book-appointment">Book a New Appointment</a>
</body>
</html>
