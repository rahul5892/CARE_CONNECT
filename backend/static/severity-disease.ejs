<style>/* Global Styles */
/* Global Styles */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #a2c2e6, #f0f9ff);
    color: #333;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    transition: background 0.5s ease-in-out;
}

.container {
    width: 90%;
    max-width: 1000px;
    margin: 2rem auto;
    padding: 2rem;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease-in-out forwards;
}

header h1 {
    font-size: 2.8rem;
    color: #004e92;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
    transition: color 0.3s ease;
}

header h1:hover {
    color: #003366;
}

h2 {
    font-size: 1.8rem;
    color: #0056b3;
    margin-bottom: 1rem;
    transition: color 0.3s ease, transform 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1.2s ease-in-out forwards;
}

h2:hover {
    color: #003d7a;
    transform: translateY(-5px);
}

.patient-details p {
    font-size: 1.2rem;
    color: #333;
    margin: 0.5rem 0;
    padding: 0.5rem;
    background: #e9f5ff;
    border-left: 5px solid #004e92;
    border-radius: 6px;
    transition: background 0.3s ease, transform 0.3s ease;
    opacity: 0;
    transform: translateY(10px);
    animation: fadeInUp 1.4s ease-in-out forwards;
}

.patient-details p:hover {
    background: #b0d6f7;
    transform: translateY(-3px);
}

input[type="file"] {
    border: 2px solid #004e92;
    border-radius: 8px;
    padding: 0.6rem;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

input[type="file"]:hover {
    background-color: #e0f7ff;
    box-shadow: 0 0 8px rgba(0, 78, 146, 0.3);
    transform: scale(1.02);
}

.btn {
    display: inline-block;
    background-color: #004e92;
    color: white;
    padding: 0.8rem 1.6rem;
    border-radius: 8px;
    border: none;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 78, 146, 0.3);
}

.btn:hover {
    background-color: #003d7a;
    transform: translateY(-4px);
}

.btn:active {
    background-color: #004e92;
    transform: translateY(2px);
}

.upload-btn {
    margin-top: 1rem;
}

.actions {
    margin-top: 2rem;
}

.actions .home-btn,
.actions .ai-assistant-btn {
    margin: 1rem;
    display: inline-block;
}

.summary {
    margin-top: 2rem;
}

.summary h3 {
    color: #004e92;
    font-size: 1.6rem;
    opacity: 0;
    transform: translateY(15px);
    animation: fadeInUp 1.8s ease-in-out forwards;
}

.summary p {
    font-size: 1.2rem;
    color: #333;
    background-color: #f1f9ff;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(15px);
    animation: fadeInUp 2s ease-in-out forwards;
}

/* Fade In and Slide Up Animation */
@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 1.5rem;
    }

    header h1 {
        font-size: 2.2rem;
    }

    h2 {
        font-size: 1.4rem;
    }

    .btn {
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
    }
}

    </style>

</head>
